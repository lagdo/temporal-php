{
    "listeners": {
        "*:80": {
            "pass": "routes"
        }
    },
    "routes": [
        {
            "match": {
                "uri": [
                    "*.php",
                    "*.php/*"
                ]
            },
            "action": {
                "pass": "applications/api/direct"
            }
        },
        {
            "action": {
                "share": "/var/www/public$uri",
                "fallback": {
                    "pass": "applications/api/index"
                }
            }
        }
    ],
    "applications": {
        "api": {
            "type": "php",
            "user": "temporal",
            "group": "temporal",
            "targets": {
                "direct": {
                    "root": "/var/www/public/"
                },
                "index": {
                    "root": "/var/www/public/",
                    "script": "index.php"
                }
            }
        }
    }
}
